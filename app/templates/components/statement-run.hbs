{{#if isNarrow}}
  {{#each statementsData as |a|}}
    <div class={{if a.isChosen 'list-group statementlist--row--chosen' 'list-group'}}>
      <div class={{if a.isChosen 'list-group-item statementlist--commentbox list-group-item-info' 'list-group-item statementlist--commentbox'}}>
        <span class="statementlist--labelinset">{{#link-to 'db.statement' model a.statement}}{{a.label}} <small>{{a.pinkNumber}}</small>{{/link-to}}</span>
        {{a.commentText}}
      </div>
      <div class="list-group-item statementlist--assertbox">{{inference-rule hypotheses=a.hypotheses assertion=a.statement}}</div>
    </div>
  {{/each}}
{{else}}
  <table class="table table-bordered statementlist--table">
    <thead><tr><th class="statementlist--labelcol">Label</th><th class="statementlist--assertcol">Assertion</th><th class="statementlist--commentcol">Comments</th></tr></thead>
    <tbody>
      {{#each statementsData as |a|}}
        <tr class={{if a.isChosen 'info statementlist--row--chosen'}}>
          {{! TODO: make a whole-row link }}
          <td class="statementlist--labelcol">{{#link-to 'db.statement' model a.statement}}{{a.label}} <small>{{a.pinkNumber}}</small>{{/link-to}}</td>
          <td class="statementlist--assertcol">{{inference-rule hypotheses=a.hypotheses assertion=a.statement}}</td>
          <td class="statementlist--commentcol">{{a.commentText}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{/if}}
